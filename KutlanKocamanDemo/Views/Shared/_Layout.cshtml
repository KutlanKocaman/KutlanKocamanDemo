<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link rel="apple-touch-icon" sizes="180x180" href="/Images/favicon/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/Images/favicon/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/Images/favicon/favicon-16x16.png">
    <title>Kutlan Coder - @ViewData["Title"]</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-nav" asp-area="" asp-controller="Home" asp-action="Index">
                    <img class="navbar-logo" src="~/Images/KutlanCoder.svg" />
                </a>
                <div class="navbar-right-pad"></div>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row">
                    <div class="btn-group">
                        <a href="#" type="button" class="nav-link text-dark" id="contentForAllUsersButton" data-toggle="dropdown">
                            Content for all users
                        </a>
                        <div class="dropdown-menu" aria-labelledby="contentForAllUsersButton">
                            <a class="nav-link text-dark" asp-area="" asp-controller="SPA" asp-action="Index">Algorithms</a>
                        </div>
                    </div>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <div class="btn-group">
                            <a href="#" type="button" class="nav-link text-dark" id="contentForAuthUsersButton" data-toggle="dropdown">
                                Content for authenticated users
                            </a>
                            <div class="dropdown-menu" aria-labelledby="contentForAuthUsersButton">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Customers" asp-action="Index">Customers (SQL DB CRUD)</a>
                            </div>
                        </div>
                    }
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
        @RenderSection("Scripts", required: false)
    </body>
</html>
